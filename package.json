{
    "name": "message-await",
    "version": "0.2.0",
    "description": "A utility to print message with an async success or failure in node.js",
    "main": "dist/src/index.js",
    "scripts": {
        "clean": "rimraf dist",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "lint": "eslint . --ext .ts,.d.ts,.js",
        "lint:fix": "eslint . --ext .ts,.d.ts,.js --fix",
        "verify-release": "concurrently npm:lint npm:build",
        "prepublishOnly": "npm run clean && npm run verify-release"
    },
    "keywords": [
        "async",
        "node",
        "await",
        "print",
        "message"
    ],
    "author": "Giles Roadnight",
    "license": "ISC",
    "dependencies": {
        "cli-cursor": "^3.1.0",
        "log-symbols": "^4.1.0"
    },
    "devDependencies": {
        "@types/node": "^14.17.1",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/parser": "^4.20.0",
        "chalk": "^4.1.1",
        "concurrently": "^6.2.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.2.1",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.1.5"
    }
}
